<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgn"
    android:paddingLeft="7dp"
    android:paddingRight="7dp"
    android:padding="5dp"
    tools:context="com.google.android.gms.samples.vision.barcodereader.ui.camera.MainActivity">

    <TextView
        android:id="@+id/status_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="30dp"
        android:freezesText="true"
        android:text="QR  generate"
        android:textAllCaps="true"
        android:textColor="@color/yellow"
        android:textSize="25dp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/barcode_value"
        android:layout_width="wrap_content"
        android:layout_height="87dp"
        android:layout_alignEnd="@+id/status_message"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/status_message"
        android:layout_marginTop="3dp"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <Button
        android:id="@+id/read_barcode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/status_message"
        android:layout_marginBottom="17dp"
        android:paddingLeft="10dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/home_button_bg"
        android:paddingTop="5dp"
        android:padding="13dp"
        android:paddingBottom="5dp"
        android:drawableLeft="@drawable/qr_code"
        android:textColor="@color/white_greyish"
        android:textSize="20dp"
        android:textStyle="bold"
        android:text="open CAMERA to Scan" />


</RelativeLayout>
